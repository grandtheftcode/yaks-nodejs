<!-- views/admin/menus/list-locations.ejs -->

<h2>Menü Konumları</h2>
<p>Temanızda kullanabileceğiniz farklı menü alanlarını buradan yönetebilirsiniz.</p>
<!-- <a href="/admin/menus/add" class="btn btn-success mb-3">Yeni Menü Konumu Ekle</a> --> <!-- Ekleme fonksiyonu eklenince -->

<% if (typeof menus !== 'undefined' && menus.length > 0) { %>
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Menü Adı</th>
                <th>Konum Kodu (Slug)</th>
                <th>Açıklama</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            <% menus.forEach(menu => { %>
                <tr>
                    <td><%= menu.id %></td>
                    <td><%= menu.name %></td>
                    <td><code><%= menu.location_slug %></code></td>
                    <td><%= menu.description || '-' %></td>
                    <td>
                        <a href="/admin/menus/items/<%= menu.id %>" class="btn btn-sm btn-primary mr-1">Öğeleri Yönet</a>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
<% } else { %>
    <div class="alert alert-info">Tanımlı menü konumu bulunamadı.</div>
<% } %>