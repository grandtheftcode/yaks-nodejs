

    <section class="content">
        <div class="row">

            <div class="col-md-8">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Ürün Bilgileri</h3>
                    </div>
                    <% if (typeof error !== 'undefined' && error) { %>
                        <div class="alert alert-danger"><%= error %></div>
                    <% } %>
                    <form action="/admin/products/edit/<%= product.id %>" method="POST" >
                        <div class="box-body">
                            <div class="form-group <%= errors.name ? 'has-error' : '' %>">
                                <label for="name">Ürün Adı *</label>
                                <input type="text" class="form-control" id="name" name="name" placeholder="Ürün Adı" value="<%= product.name %>" required>
                                <% if (errors.name) { %><span class="help-block"><%= errors.name %></span><% } %>
                            </div>
                            <div class="form-group">
                                <label for="slug">Slug (URL Dostu İsim)</label>
                                <input type="text" class="form-control" id="slug" name="slug" placeholder="otomatik-olusturulacak-veya-manuel" value="<%= product.slug %>">
                                <p class="help-block">Boş bırakırsanız ürün adından otomatik oluşturulur.</p>
                            </div>
                             <div class="form-group">
                                <label for="description">Açıklama</label>
                                <textarea class="form-control" id="description" name="description" rows="5" placeholder="Uzun Ürün Açıklaması"><%= product.description %></textarea>
                            </div>
                             <div class="form-group">
                                <label for="short_description">Kısa Açıklama</label>
                                <textarea class="form-control" id="short_description" name="short_description" rows="3" placeholder="Liste sayfalarında görünecek kısa özet"><%= product.short_description %></textarea>
                            </div>

                        </div>
                    </div>
                </div>

            <div class="col-md-4">
                 <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Yayınlama</h3>
                    </div>
                    <div class="box-body">
                         <div class="form-group">
                             <label for="status">Durum</label>
                             <select class="form-control" id="status" name="status">
                                 <option value="published" <%= (product.status === 'published') ? 'selected' : '' %>>Yayınlandı</option>
                                 <option value="draft" <%= (product.status === 'draft') ? 'selected' : '' %>>Taslak</option>
                                 <option value="private" <%= (product.status === 'private') ? 'selected' : '' %>>Gizli</option>
                             </select>
                         </div>
                    </div>
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Ürünü Güncelle</button>
                        <a href="/admin/products/" class="btn btn-default pull-right">İptal</a>
                    </div>
                 </div>

                 <div class="box box-primary">
                     <div class="box-header with-border">
                         <h3 class="box-title">Ürün Verisi</h3>
                     </div>
                     <div class="box-body">
                          <div class="form-group <%= errors.price ? 'has-error' : '' %>">
                              <label for="price">Normal Fiyat (TL) *</label>
                              <input type="number" step="0.01" class="form-control" id="price" name="price" placeholder="99.90" value="<%= product.price %>" required>
                              <% if (errors.price) { %><span class="help-block"><%= errors.price %></span><% } %>
                          </div>
                           <div class="form-group">
                              <label for="sale_price">İndirimli Fiyat (TL)</label>
                              <input type="number" step="0.01" class="form-control" id="sale_price" name="sale_price" placeholder="89.90" value="<%= product.sale_price ? product.sale_price : '' %>">
                               <p class="help-block">İndirim yoksa boş bırakın.</p>
                          </div>
                           <div class="form-group">
                              <label for="sku">SKU (Stok Kodu)</label>
                              <input type="text" class="form-control" id="sku" name="sku" placeholder="URUN-KODU-123" value="<%= product.sku %>">
                          </div>
                           <div class="form-group">
                              <label for="stock_quantity">Stok Miktarı</label>
                              <input type="number" step="1" class="form-control" id="stock_quantity" name="stock_quantity" placeholder="100" value="<%= product.stock_quantity %>">
                          </div>
                     </div>
                 </div>

                  <div class="box box-primary">
                     <div class="box-header with-border">
                         <h3 class="box-title">Kategori</h3>
                     </div>
                     <div class="box-body">
                         <div class="form-group">
                            <label for="category_id">Ürün Kategorisi</label>
                             <select class="form-control" id="category_id" name="category_id">
                                <option value="">-- Kategori Seç --</option>
                             </select>
                         </div>
                     </div>
                 </div>

            </div>
          </form> 
        </div>
    </section>