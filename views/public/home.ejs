<!-- start of hero -->
<% if (typeof carouselSlides !=='undefined' && carouselSlides.length> 0) { %>
    <section class="hero hero-slider-wrapper">
        <div class="hero-slider hero-slider-style-1">
            <% carouselSlides.forEach(slide=> { %>
                <div class="slide">
                    <img src="<%= slide.image_path %>" alt class="slider-bg">
                    <div class="container">
                        <div class="row">
                            <div class="col col-lg-8 col-sm-9 slide-caption">
                                <% if (slide.title || slide.caption) { %>
                                    <% if (slide.link_url) { %> </a>
                                        <% } %>
                                            <% if (slide.title) { %>
                                                <h2>
                                                    <%= slide.title %>
                                                </h2>
                                                <% } %>
                                                    <% if (slide.caption) { %>
                                                        <p>
                                                            <%= slide.caption %>
                                                        </p>
                                                        <% } %>
                                                            <div class="btns">
                                                                <% if (slide.link_url) { %> <a class="theme-btn"
                                                                        href="<%= slide.link_url %>"
                                                                        target="<%= slide.link_target %>">
                                                                        <% } %>Detaylar Içın tıklayın
                                                                    </a>
                                                                    
                                                                        <% if (slide.link_url) { %> </a>
                                                                            <% } %>
                                                                    <% } %>
                                                            </div>
                            </div>
                        </div>
                    </div>
                </div>
                <% }); %>
        </div>
    </section>
    <% } %>
        <!-- end of hero slider -->
        <!-- Carousel'i burada veya main içinde gösterebiliriz -->
        <!-- Örnek: Header'ın hemen altında tam genişlikte -->

        <div class="container">

            <section class="news-grids">

                <h3>Urunlerimiz</h3>
                <% if (typeof procucts !== 'undefined' && procucts.length > 0) { %>
                    <div class="news-grids">
                        <% procucts.forEach(post => { %>
                            <div class="grid">
                                <div class="entry-details">
                                    <div class="entry-media">
                                        <img src="assets/images/blog/img-1.jpg" alt="">
                                    </div>
                                    <div class="entry-meta">
                                        <ul>
                                            <li><i class="fa fa-clock-o"></i><%= post.created_at.toLocaleDateString('tr-TR') %></li>
                                        </ul>
                                    </div>
                                    <div class="entry-body">
                                        <h3><%= post.name %></h3>
                                    </div>
                                </div>
                            </div>
                
                
                            
                        <% }); %>
                    </div>
                    <% } else { %>
                        <p>Henüz blog yazısı eklenmemiş.</p>
                        <% } %>
                        
            </section>
<div style="height: 50px;width: 50px;"></div>

        </div>